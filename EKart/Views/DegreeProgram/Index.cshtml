@using EKart.ViewModels.DegreeProgramViewModels
@model List<DegreeProgramViewModel>
<div class="container">
    <div class="container">
        <a class="btn btn-primary" asp-action="create">Add New! </a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Degree Program Id</th>
                <th>Degree Program Title</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var degree in Model)
            {
                <tr>
                    <td>@degree.SerialNumber</td>
                    <td>@degree.DegreeProgramTitle</td>
                    <td>
                        <a class="btn btn-info me-2" asp-action="Edit" asp-controller="DegreeProgram" asp-route-degId="@degree.SerialNumber">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="DegreeProgram" asp-route-degId="@degree.SerialNumber">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>