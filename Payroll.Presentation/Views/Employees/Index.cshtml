@using Payroll.Presentation.ViewModel
@model List<EmployeeViewModel>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee No</th>
            <th>Image Url</th>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Designation</th>
            <th>City</th>
            <th>Date Of Joining</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>@list.EmployeeNo</td>
                <td><img src="@list.ImageUrl" alt="" width="24" height="24"></td>
                <td>@list.FullName</td>
                <td>@list.Gender</td>
                <td>@list.Designation</td>
                <td>@list.City</td>
                <td>@list.DateOfJoined</td>
                
                <td>
                   
                    <a class="btn btn-info" asp-action="Edit" asp-controller="Employees" asp-route-Id="@list.Id">Edit</a>

                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Employees" asp-route-Id="@list.Id">Delete</a>

                </td>
        </tr>
        }
    </tbody>
</table>
